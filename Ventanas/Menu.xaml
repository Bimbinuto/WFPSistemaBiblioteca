                <Label
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Content="Biblioteca"
                    FontWeight="Light"
                    Margin="10,0,0,0"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Calibri" />

