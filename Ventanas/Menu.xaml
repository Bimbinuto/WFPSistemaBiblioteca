                </StackPanel>

                <Path
                    Fill="White"
                    Stretch="UniformToFill"
                    Width="34"
                    Height="34"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,-7,147,0" />
