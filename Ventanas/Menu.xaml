        <!--  Diseño en general para los botones  -->
        <Style x:Key="DesignButton" TargetType="{x:Type RadioButton}">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border
                            x:Name="RButtonBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <Line
                                    X1="5"
                                    X2="5"
                                    Y1="35"
                                    Y2="14"
                                    StrokeThickness="4"
                                    Stroke="White"
                                    x:Name="lineaPrueba"
                                    Visibility="Hidden" />
                                <Path
                                    x:Name="Icon"
                                    Width="20"
                                    Height="20"
                                    Margin="12,0,20,0"
                                    Data="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                    Fill="#FFC5A9"
                                    Stretch="Uniform"
                                    VerticalAlignment="Center"
                                    RenderTransformOrigin="0.5 0.5">
                                    <Path.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                    </Path.RenderTransform>
                                </Path>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#15ffffff" />
                                <Setter TargetName="Icon" Property="Fill" Value="#fcfcda" />
                                <!--  Animate Scala Button  -->
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Icon"
                                                Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1.2"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="Icon"
                                                Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1.2"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Icon"
                                                Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1"
                                                Duration="0:0:0.15" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="Icon"
                                                Storyboard.TargetProperty="(Path.RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1"
                                                Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <!--  Cambio de propiedad segun IsCheked  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#20ffffff" />
                                <Setter TargetName="lineaPrueba" Property="Visibility" Value="Visible" />
                                <Setter TargetName="Icon" Property="Fill" Value="#dd0007" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Botones de la barra principal  -->
        <Style x:Key="StyleButtonBarUp" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="43" />
            <Setter Property="Height" Value="34" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="BorderBrush" Value="AliceBlue" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Path
                                x:Name="IconBar"
                                Width="11"
                                Height="11"
                                Data="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                Fill="White"
                                Stretch="Uniform"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40ffffff" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <!--  EDICION DE PANTALLA DEL MENU  -->
    <Border BorderThickness="2">
        <!--  Borde Gradiente para el Menu  -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0.8, 0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#00ffe4e1" />
                <GradientStop Offset="1" Color="#00f9b7ff" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                <GradientStop Offset="0" Color="#840007" />
                <GradientStop Offset="1" Color="#fcfcda" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid
                Name="movableGrid"
                Grid.Row="0"
                Background="#f5000000">

                <Label
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Content="Biblioteca"
                    FontWeight="Light"
                    Margin="10,0,0,0"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Calibri" />

                <Label
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Name="lbTimer"
                    Foreground="White"
                    FontFamily="Calibri"
                    FontSize="16" />

                <!--  Boton de cerrar  -->
                <Button
                    Style="{StaticResource StyleButtonBarUp}"
                    Tag="{StaticResource IconClose}"
                    Margin="0,0,0,0"
                    Click="btnMenuClose"
                    ToolTip="Cerrar" />

                <Button
                    Style="{StaticResource StyleButtonBarUp}"
                    Tag="{StaticResource IconMax}"
                    Margin="0,0,42,0"
                    ToolTip="Maximizar" />

                <Button
                    Style="{StaticResource StyleButtonBarUp}"
                    Tag="{StaticResource IconMin}"
                    Margin="0,0,84,0"
                    ToolTip="Minimizar" />
            </Grid>

            <Grid Name="staticGrid" Grid.Row="1">
                <!--  Contenedor de los botones  -->
                <Grid Background="#d2000000">
                    <Grid Grid.Row="0">
                        <!--  Icono del usuario  -->
                        <Ellipse
                            Width="60"
                            Height="60"
                            StrokeThickness="2"
                            Stroke="AliceBlue"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Recursos/avatar.jpg" />
                            </Ellipse.Fill>
                        </Ellipse>

                        <!--  Nombre  -->
                        <Label
                            Grid.Column="1"
                            Content="Administrador"
                            Foreground="White"
                            FontFamily="Calibri"
                            FontSize="16"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,18" />

                        <!--  Cuenta  -->
                        <Label
                            Grid.Column="1"
                            Content="admin@sistemas.edu.bo"
                            Foreground="White"
                            FontFamily="Calibri"
                            FontSize="15"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="0,18,0,0" />


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Border Grid.Row="1">
                        <StackPanel Grid.Column="0">
                            <!--  Prueba de nueva forma de boton  -->
                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Inicio"
                                Tag="{StaticResource IconInicio}"
                                Click="btnInicio"
                                IsChecked="True" />

                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Admistracion"
                                Tag="{StaticResource IconAdministracion}"
                                Click="btnAdministracion" />

                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Prestamos y Reservaciones"
                                Tag="{StaticResource IconPrestamosReservaciones}"
                                Click="btnPrestamosYReservaciones" />

                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Libros y Catalogos"
                                Tag="{StaticResource IconLibrosCatalogos}" />


                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Reportes y Estadisticas"
                                Tag="{StaticResource IconReporteEstadistica}" />

                            <RadioButton
                                Style="{StaticResource DesignButton}"
                                Content="Acerca del Software"
                                Tag="{StaticResource IconAcercaSoftware}"
                                Click="btnAcercaDe" />

                        </StackPanel>
                    </Border>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="110" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                </Grid>

                <!--  ventana que contiene los submenu's  -->
                <Grid Grid.Column="1" Background="#d0000000">
                    <Frame x:Name="frPagePrincipal" NavigationUIVisibility="Hidden" />
                </Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        </Grid>
    </Border>
</Window>
